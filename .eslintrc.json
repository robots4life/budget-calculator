{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:import/recommended", "airbnb-base"],
	"overrides": [
		{
			"files": ["**/*.svelte"],
			"processor": "svelte3/svelte3"
		}
	],
	"plugins": ["import", "svelte3"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"no-unused-vars": "warn",
		"semi": "off",
		"no-tabs": "off",
		"comma-dangle": "off",
		"indent": "off",
		"global-require": "off",
		"operator-linebreak": "off"
	}
}
